rules_version = '2';
// Reglas de Firestore: denegar todo acceso desde el cliente.
// Toda lectura/escritura debe hacerse desde tu backend (Next.js API con Firebase Admin SDK).
// CÃ³mo aplicar: Firebase Console > Firestore > Rules > pegar y publicar.
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
